{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        
        <div class="row">
            <div class="col-md-10">
                <h3>Empleadores</h3>
            </div>
            <div class="col-md-2">
                <a href="/empleados/nuevo" class="lm-mas"></a>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Sexo</th>
                            <th>Cedula</th>
                            <th>Telefono</th>
                            <th>Tipo contrato</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                       {% for empleado in empleados %}
                        <tr>
                            <td>{{ empleado.nombre }}</td>
                            <td>{{ empleado.sexo }}</td>
                            <td>{{ empleado.cedula }}</td>
                            <td>{{ empleado.telefono }}</td>
                            <td>{{ empleado.tipoContrato}}</td>
                            <td>
                                <a href="/empleados/editar/{{ empleado.id }}">editar</a>                                
                                <a href="/empleados/delete/{{ empleado.id }}">borrar</a>                                
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    
                </table>
            </div>
        </div>
        
    </div>
{% endblock %}

